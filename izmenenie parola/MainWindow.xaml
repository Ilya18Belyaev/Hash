        <TextBox  x:Name="passwordTb" HorizontalAlignment="Left" Margin="126,92,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="131" Height="27" Background="#FFD8ACF7"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="54,140,0,0" VerticalAlignment="Top" FontSize="16" Width="156" Height="31" Click="Button_Click" Background="#FFA69DDE"/>
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="54,194,0,0" VerticalAlignment="Top" FontSize="16" Width="156" Height="31" Background="#FFA69DDE" Click="Button_Click_1"/>
        <Button Content="Смена пароля" HorizontalAlignment="Left" Margin="54,246,0,0" VerticalAlignment="Top" Height="30" Width="156" FontSize="16" Background="#FFA69DDE" Click="Button_Click_2"/>

    </Grid>
</Window>
